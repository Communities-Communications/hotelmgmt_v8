                                <div class="form-group">
                                    <div>
                                        <button class="btn btn-primary btn-block">Confirm</button>
                                    </div>
                                </div>
                            </span>
                        </div>
                        <div class="clearfix"/></div>
                </form>
            </div>
        </section>
    </xpath>
</template>

